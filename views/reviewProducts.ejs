<%- include('partials/header') %>


  <% if(productData.length===0){ %>
    <div style="text-align:center;">
    <h1>   No Products Bought Yet!</h1>
  </div>
    <% } else{ %>
      <div class="row">
  <%productData.forEach(function(element){ %>
    <!-- <form action="/buyProduct" method="POST"> -->
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body" style="text-align:center;">
          <h5 class="card-title text-white bg-dark" ><%=element.name%></h5>
          <p class="card-text" name="serialId" >Serial Id:<%=element.serialId%></p>
          <p class="card-text">Price:<%=element.price%></p>
          <p class="card-text">Description:<%=element.description%></p>
          <!-- <button href="/buyProduct/<%=element.serialId%>" type="submit" class="btn btn-dark">Buy</button> -->
          <a href="/sendProductToDistributor/<%=element._id%>">Send Product To Distributor</a>
        </div>
      </div>
    </div>
  <!-- </form> -->
    <%})%>
  </div>  
    <% } %>

<%- include('partials/footer') %>
